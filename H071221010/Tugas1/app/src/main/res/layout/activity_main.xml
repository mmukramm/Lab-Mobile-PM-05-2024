<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6E9"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/catcut"
            android:text="Data Pribadi"
            android:paddingBottom="15dp"
            android:textColor="#643843"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="189dp"
            android:layout_height="191dp"
            android:layout_gravity="center"
            android:src="@drawable/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andi Alisha Faiqihah"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textColor="#643843"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="#AC7D88"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin :"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#643843"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Perempuan"
                        android:textStyle="bold"
                        android:textColor="#643843"
                        android:textSize="18sp"
                        android:paddingRight="45dp" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Laki-laki"
                        android:textStyle="bold"
                        android:textColor="#643843"
                        android:textSize="18sp" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hal yang disukai :"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:textColor="#643843"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Uang"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#643843"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Game"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#643843"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Merch Sanrio"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#643843"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Lainnya"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#643843"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputLainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Masukkan hal lainnyaa ...           "
                    android:paddingRight="10dp"
                    android:textColor="#AC7D88"/>
                <Button
                    android:id="@+id/buttonOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:backgroundTint="#85586F"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <ListView
                        android:id="@+id/listLainnya"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>