<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#86B6F6"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Diri"
        android:layout_gravity="center_horizontal"
        android:textColor="#EEF5FF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="177dp"
        android:layout_marginHorizontal="90dp"
        android:src="@drawable/pict" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Nama : Andi Zhafira Mezaluna"
        android:textColor="#EEF5FF"
        android:textSize="25sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="34dp"
        android:text="Jenis Kelamin :"
        android:textColor="#EEF5FF"
        android:textSize="25sp"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Laki-laki"
        android:textColor="#EEF5FF"
        android:textSize="25sp"
        android:layout_marginStart="50dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:textColor="#EEF5FF"
            android:textSize="25sp"
            android:layout_marginStart="30dp"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hal yang disukai :"
        android:textColor="#EEF5FF"
        android:textSize="25sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="34dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sehun"
        android:textSize="25sp"
        android:textColor="#EEF5FF"
        android:layout_marginStart="34dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sehun"
        android:textSize="25sp"
        android:textColor="#EEF5FF"
        android:layout_marginStart="34dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lainnya"
        android:textSize="25sp"
        android:textColor="#EEF5FF"
        android:layout_marginStart="34dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan hal lainnya"
            android:textColorHint="#EEF5FF"
            android:textSize="22sp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="8dp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="25sp"
            android:textColor="#EEF5FF"
            android:layout_marginStart="38dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
    />
    </LinearLayout>
</ScrollView>